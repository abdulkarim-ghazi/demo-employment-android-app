<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
   
<welcome-file-list>
    <welcome-file>wml_login.jsp</welcome-file>
</welcome-file-list>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerCandidate</servlet-name>
        <servlet-class>registerCandidate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>jobsAvailable</servlet-name>
        <servlet-class>jobsAvailable</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerCompany</servlet-name>
        <servlet-class>registerCompany</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>candidatesSuitable</servlet-name>
        <servlet-class>candidatesSuitable</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addJob</servlet-name>
        <servlet-class>addJob</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>searchAllJobOffers</servlet-name>
        <servlet-class>searchAllJobOffers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addCandidateCertificate</servlet-name>
        <servlet-class>addCandidateCertificate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>jobsAvailable</servlet-name>
        <url-pattern>/jobsAvailable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerCandidate</servlet-name>
        <url-pattern>/registerCandidate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerCompany</servlet-name>
        <url-pattern>/registerCompany</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>candidatesSuitable</servlet-name>
        <url-pattern>/candidatesSuitable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addJob</servlet-name>
        <url-pattern>/addJob</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>searchAllJobOffers</servlet-name>
        <url-pattern>/searchAllJobOffers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addCandidateCertificate</servlet-name>
        <url-pattern>/addCandidateCertificate</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
